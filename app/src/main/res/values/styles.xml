<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/dusk_blue</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <!-- Text Style -->
    <style name="TitleBig">
        <item name="android:textSize" tools:ignore="SpUsage">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/pt_sans_bold</item>
    </style>

    <style name="TitleSection">
        <item name="android:textSize" tools:ignore="SpUsage">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/pt_sans_bold</item>
    </style>

    <style name="ButtonLargePrimary">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/pt_sans_bold</item>
    </style>

    <style name="TitleProduct">
        <item name="android:textSize" tools:ignore="SpUsage">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/pt_sans_bold</item>
    </style>

    <style name="SmallButtonLight">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/brown_grey</item>
        <item name="android:fontFamily">@font/pt_sans_bold</item>
    </style>

    <style name="TabTitle">
        <item name="android:gravity">center</item>
        <item name="android:textSize" tools:ignore="SpUsage">14sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/darker_browngrey</item>
        <item name="android:fontFamily">@font/pt_sans</item>
    </style>

    <style name="ButtonSmallPrmary">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/pt_sans_bold</item>
    </style>

    <style name="PointsInfo">
        <item name="android:textSize" tools:ignore="SpUsage">14sp</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:fontFamily">@font/pt_sans_bold</item>
    </style>

    <style name="TitleTextField">
        <item name="android:textSize" tools:ignore="SpUsage">14sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/pt_sans</item>
    </style>

    <style name="BottomSheetDesc">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/darker_browngrey</item>
        <item name="android:fontFamily">@font/pt_sans</item>
    </style>

    <style name="SubtitleSection">
        <item name="android:textSize" tools:ignore="SpUsage">14sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textColor">@color/darker_browngrey</item>
        <item name="android:fontFamily">@font/pt_sans</item>
    </style>

    <style name="SubtitleBlackRegular">
        <item name="android:textSize" tools:ignore="SpUsage">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/pt_sans</item>
    </style>

    <style name="PtSansRegular5ls12dp">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textColor">@color/darker_browngrey</item>
        <item name="android:fontFamily">@font/pt_sans</item>
    </style>

    <style name="PtSansRegular5ls24dp">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textColor">@color/brown_grey</item>
        <item name="android:fontFamily">@font/pt_sans</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/pinkish_red</item>
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!-- Bottom Sheet -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">  hri
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_roundedtop15_white</item>
    </style>

    <!-- Text Box -->
    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/edit_textbox_color</item>
        <item name="boxStrokeErrorColor">@color/pinkish_red</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/error_appearance</item>
        <item name="android:textColor">@color/pure_black</item>
        <item name="android:textColorHint">@color/very_light_pink</item>
<!--        <item name="endIconDrawable">@drawable/ic_close_13dp</item>-->
        <item name="endIconTint">@null</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Regular">
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Regular14" parent="Regular">
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
    </style>

    <style name="Regular20" parent="Regular">
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <style name="Regular14.PinkishRed">
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
        <item name="android:textColor">@color/pinkish_red</item>
    </style>

    <style name="Regular20.PinkishRed">
        <item name="android:textSize" tools:ignore="SpUsage">20sp</item>
        <item name="android:textColor">@color/pinkish_red</item>
    </style>

    <style name="Regular12.White" parent="Regular">
        <item name="android:textSize" tools:ignore="SpUsage">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@drawable/ripple_rounded</item>
    </style>

    <style name="Clickable.DialogClose">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@drawable/ripple_rounded</item>
    </style>

</resources>
